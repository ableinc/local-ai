{
  "name": "com.capable.localai",
  "private": true,
  "version": "1.1.0",
  "type": "module",
  "description": "A desktop chat UI for Ollama using Electron and React.",
  "author": "Jaylen Douglas",
  "email": "hello@jaylendouglas.com",
  "scripts": {
    "dev": "vite",
    "dev:server": "node --watch --env-file=.env ./server/index.js",
    "dev:full": "concurrently \"npm run dev:server\" \"npm run dev\"",
    "build": "NODE_ENV=production tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rm -rf dist/ release/",
    "clean:hard": "rm -rf dist/ release/ node_modules/ build/index.js build/index.js.map",
    "start": "node server/index.js",
    "build:mac": "npm run build && electron-builder --mac --arm64",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:linux": "npm run build && electron-builder --linux --x64",
    "build:mac:dev": "npm run build && CSC_IDENTITY_AUTO_DISCOVERY=false SKIP_NOTARIZATION=true electron-builder --mac --arm64 --dir",
    "build:win:dev": "npm run build && electron-builder --win --x64 --dir",
    "build:linux:dev": "npm run build && electron-builder --linux --x64",
    "build:server": "bun build --minify --target=node --format=esm ./server/index.js --outdir ./build",
    "postinstall--": "electron-builder install-app-deps"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.capable.localai",
    "productName": "Local Ai",
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      ".env"
    ],
    "extraResources": [
      {
        "from": "node_modules/better-sqlite3/build/Release/better_sqlite3.node",
        "to": "better_sqlite3.node"
      },
      {
        "from": ".env",
        "to": ".env"
      },
      {
        "from": "dist/assets",
        "to": "assets"
      },
      {
        "from": "dist/index.html",
        "to": "index.html"
      },
      {
        "from": "dist/pdf.worker.min.js",
        "to": "pdf.worker.min.js"
      },
      {
        "from": "dist/vite.svg",
        "to": "vite.svg"
      },
      {
        "from": "build/index.js",
        "to": "server.js"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "notarize": true,
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "assets/icon.icns",
      "darkModeSupport": true,
      "asarUnpack": [
        "**/*.node"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "assets/icon.png"
    }
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.525.0",
    "mammoth": "^1.9.1",
    "next-themes": "^0.4.6",
    "pdfjs-dist": "^5.3.93",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "sonner": "^2.0.6",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@eslint/js": "^9.30.1",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.3"
  }
}
